# Workaround for Next.js workspace detection
NEXT_PRIVATE_SKIP_WORKSPACE_ROOT_CHECK=1

# Supabase PostgreSQL
DATABASE_HOST=127.0.0.1
DATABASE_NAME=postgres
DATABASE_PORT=54322
DATABASE_USER=postgres

# Supabase Configuration
# Get these values from `supabase start` output or from your Supabase project dashboard

# Public Supabase URL (exposed to client)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321

# Public Supabase Anon Key (exposed to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (server-only)
# NEVER expose this in client-side code or to the browser
# Used in API routes for admin operations (user creation, etc.)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional: internal Supabase URL for server-side calls (useful inside Docker)
# If set, server code will use this instead of the public URL above.
# Example for local Docker on macOS: http://host.docker.internal:54321
SUPABASE_INTERNAL_URL=http://host.docker.internal:54321

# ADK Agent Service Configuration
# The BFF calls this service to handle conversational interviews
# See: ../adk-agent/README.md and docs/adk-integration.md

# Base URL of the ADK Agent Service
# For development: http://localhost:8000
# For production: https://adk-service.example.com
NEXT_PUBLIC_ADK_BASE_URL=hhttp://host.docker.internal:8000

# Cauldron validation service (server-only)
CAULDRON_BASE_URL=http://host.docker.internal:8088

# Shared secret sent by BFF to protect internal services (Cauldron + ADK)
BFF_SHARED_SECRET=

# Google OAuth for Docs Export
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
GOOGLE_OAUTH_STATE_SECRET=your_state_hmac_secret_here

# Telegram monitoring
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

